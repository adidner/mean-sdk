{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
      "outDir": "./",
      "declaration": true,
      "target": "es6",
      "lib": [
          "dom",
          "dom.iterable",
          "esnext"
      ],
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "strict": true,
      "sourceMap": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "exclude": ["./packages/**/src/*.*"]
}